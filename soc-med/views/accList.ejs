<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <title>APP Accounts List</title>
    <link rel="shortcut icon" href="../public/images/APP_LOGO_RED.jpg" />
</head>
<body>
    <div class="container">
        <h2><%= username %></h2>
        <% if (username === "Top3" || username === "IT38_Seked") { %>
            <a class="btn btn-sm btn-primary" href="/RegisterAccount">Add</a>
        <% } %>
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th>Media</th>
                    <th>Username</th>
                    <th>Password</th>
                    <% if (username === "Top3" || username === "IT38_Seked") { %>
                        <th>Actions</th>
                        <th></th>
                    <% } %>
                </tr>
            </thead>
            <tbody>
                <% list.forEach(function (list) { %>
                    <tr>
                        <td><%= list.media %></td>
                        <td><%= list.username %></td>
                        <td><%= list.password %></td>
                        <% if (username == "Top3" || username === "IT38_Seked") { %>
                            <td>
                                <form action="/account" method="post">
                                    <input type="hidden" name="media" id="media" value="<%= list.media %>" />
                                    <input type="hidden" name="username" id="username" value="<%= list.username %>" />
                                    <button class="btn btn-sm btn-primary" type="submit">Edit</button>
                                </form>
                            </td>
                            <td>
                                <form action="/removeAccount" method="post">
                                    <input type="hidden" name="media" id="media" value="<%= list.media %>" />
                                    <input type="hidden" name="username" id="username" value="<%= list.username %>" />
                                    <button class="btn btn-sm btn-danger" type="submit">Remove</button>
                                </form>
                            </td>
                        <% } %>
                    </tr>
                <% }); %>
                <tr>
                    
                </tr>
            </tbody>
        </table>
    </div>
</body>
</html>